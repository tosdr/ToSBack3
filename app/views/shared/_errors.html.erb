<% # Use for form errors! e.g., render 'shared/errors', error_object: @user %>
<% if error_object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(error_object.errors.count, "error") %>.
    </div>
    <ul>
    <% error_object.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>